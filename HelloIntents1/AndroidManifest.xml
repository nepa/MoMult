<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
      package="de.uniluebeck.itm.momult"
      android:versionCode="1"
      android:versionName="1.0">

    <application android:label="@string/app_name" >
        <activity android:name="HelloIntents1Activity"
                  android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        
        <activity android:label="ActivityTwo" android:name="ActivityTwo"></activity>
    </application>
    
    <!-- Grant internet access for intent to call websites in browser -->
    <uses-permission android:name="android.permission.INTERNET" />
    
    <!-- Grant phone calls for intent to call a number -->
    <uses-permission android:name="android.permission.CALL_PHONE" />
    
    <!-- Allow calling emergency numbers as well -->
    <uses-permission android:name="android.permission.CALL_PRIVILEGED" />
    
    <!-- Grant permission to use camera -->
    <uses-permission android:name="android.permission.CAMERA" />
    
    <!-- Grant permission to read the device's contact data -->
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    
    <!-- Grant permission to write contact data as well -->
    <uses-permission android:name="android.permission.WRITE_CONTACTS" />
    
</manifest> 
